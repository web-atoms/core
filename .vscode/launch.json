    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch localhost",
            "type": "chrome",
            "request": "launch",
            "url": "http://http://192.168.0.187:8080/",
            "webRoot": "${workspaceFolder}/",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "args": ["${workspaceFolder}/node_modules/@web-atoms/unit-test/index.js", "./dist/tests/"],
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
    ]
}